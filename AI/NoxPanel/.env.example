# NoxPanel Production Environment Configuration
# Copy this file to .env and customize the values

# Domain Configuration
DOMAIN=noxpanel.example.com
ACME_EMAIL=admin@example.com

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
POSTGRES_DB=noxpanel
POSTGRES_USER=noxpanel

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Application Security Keys (Generate new ones for production!)
SECRET_KEY=your_ultra_secure_secret_key_here_minimum_32_characters
JWT_SECRET_KEY=your_ultra_secure_jwt_key_here_minimum_32_characters
CSRF_SECRET_KEY=your_ultra_secure_csrf_key_here_minimum_32_characters

# Traefik Dashboard Authentication (Generate with: htpasswd -nb admin password)
TRAEFIK_AUTH=admin:$2y$10$K8oO8Z8Z8Z8Z8Z8Z8Z8Z8O

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Application Settings
NOXPANEL_ENV=production
LOG_LEVEL=INFO
UPLOAD_FOLDER=/app/data/uploads
ALLOWED_HOSTS=localhost,127.0.0.1,10.1.0.88

# Admin Configuration
ADMIN_USER=admin
ADMIN_PASS=your_secure_admin_password_here

# Database Path (for development)
DB_PATH=data/db/noxpanel.db

# Optional: External Services
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noxpanel@example.com
# SMTP_PASSWORD=your_smtp_password
# SMTP_TLS=true

# Optional: OAuth Configuration
# OAUTH_GITHUB_CLIENT_ID=your_github_client_id
# OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
# OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
# OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Optional: External APIs
# OPENAI_API_KEY=your_openai_api_key
# OLLAMA_HOST=http://localhost:11434

# Backup Configuration
# BACKUP_S3_BUCKET=noxpanel-backups
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Flask Configuration
FLASK_ENV=production
FLASK_APP=main.py
HOST=127.0.0.1
PORT=5000
