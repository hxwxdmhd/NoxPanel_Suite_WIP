# Environment Configuration Template
# Copy this file to .env and configure for your environment

# === CORE SERVICE CONFIGURATION ===
HEIMNETZ_DOCKER=true
HEIMNETZ_CONFIG_PATH=/app/config
HEIMNETZ_DATA_PATH=/app/data
HEIMNETZ_LOG_LEVEL=INFO
HEIMNETZ_WEB_HOST=0.0.0.0
HEIMNETZ_WEB_PORT=5000

# === SERVICE URLS ===
AETHERCORE_URL=http://aethercore:8001
CONTEXTFORGE_URL=http://contextforge:8000
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# === DATABASE CONFIGURATION ===
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=heimnetz
POSTGRES_USER=heimnetz_user
# Generate secure passwords using: openssl rand -base64 32
POSTGRES_PASSWORD=secure_password_change_me

REDIS_HOST=redis
REDIS_PORT=6379
# Generate secure passwords using: openssl rand -base64 32
REDIS_PASSWORD=redis_password_change_me

# === GRAFANA ===
# Generate secure passwords using: openssl rand -base64 32
GRAFANA_ADMIN_PASSWORD=grafana_admin_password_change_me

# === SECURITY ===
# Generate secure JWT key using: openssl rand -base64 64
JWT_SECRET_KEY=generate_secure_jwt_key_here
API_KEY=generate_secure_api_key_here
ENCRYPTION_KEY=generate_32_byte_encryption_key

# === MONITORING ===
PROMETHEUS_RETENTION=30d
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_grafana_password

# === PLUGIN SYSTEM ===
PLUGIN_DIRECTORY=/app/plugins
PLUGIN_SECURITY_MODE=strict
PLUGIN_TIMEOUT=30

# === DEVELOPMENT OVERRIDES ===
DEVELOPMENT_MODE=false
HOT_RELOAD=false
DEBUG_MODE=false

# === EXTERNAL SERVICES ===
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama2

# === NETWORKING ===
DOCKER_NETWORK=heimnetz-network
SUBNET=172.20.0.0/16

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups
